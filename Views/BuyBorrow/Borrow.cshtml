@model IEnumerable<book.Models.Book> 

@{
    ViewBag.Title = "Available Books for Purchase";
}

<h1>Available Books for Purchase</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.name</td>
                <td>@book.Author</td>
                <td>@book.price.ToString("C")</td> 
                <td>
                    <form asp-action="Buy" method="post">
                        <input type="hidden" name="bookId" value="@book.id" />
                        <button type="submit" class="btn btn-success">Buy</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
