@{
}
@using book.ViewModel
@model BorrowVM

<h2>Return Book</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div>
    <p><strong>Book Name:</strong> @Model.BookName</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Borrow Date:</strong> @Model.BorrowDate.ToShortDateString()</p>
    <p><strong>Return Date:</strong> @DateTime.Now.ToShortDateString()</p>
    <p><strong>Penalty:</strong> @Model.Penality</p>
</div>

<form asp-action="ReturnConfirm" method="post">
    <input type="hidden" name="BookId" value="@Model.BookId" />
    <button type="submit" class="btn btn-primary">Confirm Return</button>
    <a href="@Url.Action("AllBooks")" class="btn btn-secondary">Cancel</a>
</form>
