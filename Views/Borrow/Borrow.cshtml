@{
}
h2>Borrow Book</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
    <a href="@Url.Action("AllBooks")" class="btn btn-secondary">Back to Books</a>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
    <a href="@Url.Action("AllBooks")" class="btn btn-secondary">Back to Books</a>
}

<div>
    <p><strong>Book Name:</strong> @Model.BookName</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Status:</strong> @(Model.availablity ? "Available" : "Not Available")</p>
</div>

@if (Model.availablity)
{
    <form asp-action="BorrowConfirm" method="post">
        <input type="hidden" name="BookId" value="@Model.BookId" />
        <button type="submit" class="btn btn-primary">Confirm Borrow</button>
        <a href="@Url.Action("AllBooks")" class="btn btn-secondary">Back to Books List</a>
    </form>
}
else
{
    <p class="text-danger">Sorry, this book is currently not available for borrowing.</p>
}
